      "options": {
        "cwd": "${workspaceFolder}/api/packages/objects"
      }
    },
    {
      "label": "Start App Build Runner",
      "type": "shell",
      "command": "dart run build_runner watch",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen",
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}